{
  "name": "react-agent-ui",
  "private": false,
  "version": "0.1.0",
  "description": "Beautiful, composable React components for building AI-powered chat and agent interfaces with streaming, tool calling, and human-in-the-loop workflows",
  "author": "Richard <https://github.com/Ricardorichie>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ricardorichie/react-agent-ui.git"
  },
  "homepage": "https://github.com/Ricardorichie/react-agent-ui#readme",
  "bugs": {
    "url": "https://github.com/Ricardorichie/react-agent-ui/issues"
  },
  "keywords": [
    "react",
    "ai",
    "chat",
    "agent",
    "agentic",
    "llm",
    "ui",
    "components",
    "streaming",
    "tool-calling",
    "shadcn",
    "vercel-ai-sdk",
    "chatbot",
    "conversational-ai",
    "typescript",
    "tailwind"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build:lib": "tsup",
    "build:demo": "tsc -b && vite build",
    "build": "pnpm run build:lib",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "pnpm run lint && pnpm run typecheck && pnpm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "@ai-sdk/react": "^3.0.0",
    "clsx": "^2.1.1",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwind-merge": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@ai-sdk/react": {
      "optional": true
    }
  },
  "dependencies": {
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@ai-sdk/react": "^3.0.8",
    "@chromatic-com/storybook": "^4.1.3",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-onboarding": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "ai": "^6.0.8",
    "autoprefixer": "^10.4.23",
    "clsx": "^2.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "^10.1.11",
    "globals": "^16.5.0",
    "jsdom": "^25.0.1",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "storybook": "^10.1.11",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.5.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
